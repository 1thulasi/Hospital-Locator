<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/doc">

    <TextView
        android:id="@+id/hospitalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hospitalAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Address" />

    <TextView
        android:id="@+id/hospitalContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact" />

    <TextView
        android:id="@+id/hospitalServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services" />

    <TextView
        android:id="@+id/hospitalStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Status" />

    <TextView
        android:id="@+id/hospitalDoctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specialist Doctors" />
</LinearLayout>
